<section id="pricing" class="pricing">
  <section class="paymentChoice">
    <button><span class="buttonTop">Monthly</span></button>
    <button><span class="buttonTop">Yearly</span></button>
  </section>

  <section class="planSection">
    <article class="plan">
      <h3>Student</h3>
      <p class="price">$0.00</p>
      <ul><li>basic features</li><li>its free</li></ul>
      <button><span class="buttonTop">Choose Student</span></button>
    </article>

    <article class="plan">
      <h3>Professional</h3>
      <p class="price">$19.99</p>
      <ul><li>really cool feature</li><li>another cool feature</li></ul>
      <button><span class="buttonTop">Choose Student</span></button>
    </article>

    <article class="plan">
      <h3>Business</h3>
      <p class="price">$99.99</p>
      <ul><li>for large teams</li><li>all the previous</li></ul>
      <button><span class="buttonTop">Choose Student</span></button>
    </article>
  </section>
</section>

<style lang="scss">
  * {
    color: #383030;
  }

  .pricing {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
  }

  .planSection {
    display: flex;
    gap: 2rem;
  }

  .paymentChoice {
    margin: 1rem 0 1rem 0;
  }

  .plan {
    display: flex;
    flex-direction: column;
    align-items: center;
    flex-wrap: wrap;
    background-color: #fff;
    border-radius: 0.375rem;
    width: 20em;
    height: 18rem;
    box-shadow: 0px 0px 2px rgba(139, 128, 128, 0.5);

    .price {
      font-size: 2.25rem;
      margin: 0.5em 0 0.5em 0;
    }

    ul {
      margin-left: -1em;
    }
  }

  button {
    font-weight: bold;
    border: none;
    cursor: pointer;
    border-radius: 0.75em;
    background-color: #000;
    margin: 1em 1em 1em 1em;
  }

  .buttonTop {
    display: block;
    box-sizing: border-box;
    border: 2px solid #000;
    border-radius: 0.75em;
    background-color: #fff;
    padding: 0.75em 1.5em;
    color: #000;
    margin: 0 -4px 0 -4px;
    transform: translateY(-0.45em);
    transition: 0.1s ease;
  }

  button:hover .buttonTop {
    transform: translateY(-0.8em);
    color: rgba(245, 73, 144);
    border-color: rgba(245, 73, 144);
  }

  button:hover {
    background-color: rgba(245, 73, 144);
  }

  button:active .buttonTop {
    transform: translateY(0);
  }

  @media (max-width: 1100px) {
    .planSection {
      flex-direction: column;
    }
  }

  @media (max-width: 500px) {
    .planSection {
      width: 100%;
      gap: 1em;
    }

    .plan {
      width: 100%;
    }
  }
</style>
